<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.UpdateActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/l"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_url="https://assets9.lottiefiles.com/packages/lf20_EUyLAK.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleType="fitXY"
            android:id="@+id/imageMaintain"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/allerta"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:id="@+id/updateText"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="This version of the Megashows is no longer supported. Please download the latest version from the Playstore"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/playstore"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:id="@+id/gotoPlaystore"/>




    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_url="https://assets8.lottiefiles.com/datafiles/mv3XUwa5yz5fDaN/data.json"
        app:lottie_autoPlay="true"
        android:scaleType="fitXY"
        app:lottie_loop="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>